{
  "version": 2,
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/Experiment-01_Shopping-cart-app_CSS/(.*)",
      "destination": "/Experiment-01_Shopping-cart-app_CSS/Shopping-cart-app/public/html/$1"
    },
    {
      "source": "/Experiment-02_Shopping-cart-app_Bootstrap/(.*)",
      "destination": "/Experiment-02_Shopping-cart-app_Bootstrap/ShoppingCartApp/public/html/$1"
    },
    {
      "source": "/Experiment-03_Shopping-cart-app_validation/(.*)",
      "destination": "/Experiment-03_Shopping-cart-app_validation/$1"
    },
    {
      "source": "/Experiment-04_Weather_information_Vue/(.*)",
      "destination": "/Experiment-04_Weather_information_Vue/$1"
    },
    {
      "source": "/Experiment-11_ReactJS_Student-management/static/(.*)",
      "destination": "/Experiment-11_ReactJS_Student-management/build/static/$1"
    },
    {
      "source": "/Experiment-11_ReactJS_Student-management/(.*)",
      "destination": "/Experiment-11_ReactJS_Student-management/build/$1"
    },
    {
      "source": "/Experiment-12_ReactJS_Weather-app/static/(.*)",
      "destination": "/Experiment-12_ReactJS_Weather-app/weather-app/build/static/$1"
    },
    {
      "source": "/Experiment-12_ReactJS_Weather-app/(.*)",
      "destination": "/Experiment-12_ReactJS_Weather-app/weather-app/build/$1"
    },
    {
      "source": "/Experiment-13_ReactJS_Todo-app/static/(.*)",
      "destination": "/Experiment-13_ReactJS_Todo-app/build/static/$1"
    },
    {
      "source": "/Experiment-13_ReactJS_Todo-app/(.*)",
      "destination": "/Experiment-13_ReactJS_Todo-app/build/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "**/*.{js,css,png,jpg,jpeg,gif,ico,svg,woff,woff2,ttf,eot}",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "**/*.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/experiment-11",
      "destination": "/Experiment-11_ReactJS_Student-management/build/index.html"
    },
    {
      "source": "/experiment-12", 
      "destination": "/Experiment-12_ReactJS_Weather-app/weather-app/build/index.html"
    },
    {
      "source": "/experiment-13",
      "destination": "/Experiment-13_ReactJS_Todo-app/build/index.html"
    }
  ],
  "trailingSlash": false
}

{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/experiment-01",
      "destination": "/Experiment-01_Shopping-cart-app_CSS/Shopping-cart-app/public/html/index.html"
    },
    {
      "source": "/experiment-02", 
      "destination": "/Experiment-02_Shopping-cart-app_Bootstrap/ShoppingCartApp/public/html/index.html"
    },
    {
      "source": "/experiment-03",
      "destination": "/Experiment-03_Shopping-cart-app_validation/index.html"
    },
    {
      "source": "/experiment-04",
      "destination": "/Experiment-04_Weather_information_Vue/index.html"
    },
    {
      "source": "/experiment-11",
      "destination": "/Experiment-11_ReactJS_Student-management/build/index.html"
    },
    {
      "source": "/experiment-12",
      "destination": "/Experiment-12_ReactJS_Weather-app/weather-app/public/index.html"
    },
    {
      "source": "/experiment-13",
      "destination": "/Experiment-13_ReactJS_Todo-app/build/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.html)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/index.html",
      "permanent": false
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
